{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && python3 -m ensurepip --upgrade && python3 -m pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd backend && . /app/venv/bin/activate && uvicorn main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

